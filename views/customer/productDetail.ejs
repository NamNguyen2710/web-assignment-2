<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">

  <title>Product details - <%= product.name %></title>
	<link rel="icon" type="image/x-icon" href="/public/image/favicon.ico">

  <link rel="stylesheet" href="/public/css/default.css">
  <link rel="stylesheet" href="/public/css/customer.css">
  <link href="https://fonts.googleapis.com/css2?family=Rubik:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.7/css/all.css">
</head>
<body>
  <!--Header-->
  <%- include('../template/customerHeader.ejs'); %>

  <div class="small-container single-product">
    <div class="row">
      <div class="col-2">
        <img src="/public/image/<%= product.images[0] %>" width="100%">
      </div>

      <div class="col-2">
        <p>Home / <%= product.name %></p>
        <h1><%= product.name %></h1>
        <h4>$<%= Number(product.price).toFixed(2) %></h4>
        <input id="amount" type="number" value="1" />
        <button id="add-to-cart" class="btn">Add To Cart</button>
      </div>
    </div>
  </div>

  <div class="small-container single-product">
    <div class="row">
      <h3>Description</h3>
      <p><%= product.description %></p>
    </div>
  </div>
  <br />

  <!--Related products--> 
  <div class="small-container">
    <div class="row row-2">
      <h2>Related Products</h2>
      <a href="/"><p>View More</p></a>
    </div>
  </div>

  <div class="small-container">
    <div class="row">
      <% products.forEach(prod => { %>
        <div class="col-4">
          <a href="/products/<%= prod['_id'] %>">
            <img src="/public/image/<%= prod.images[0] %>" width="250px" height="250px">
          </a>
          <h4><%= prod.name %></h4>
          <div class="rating">
              <i class="fa fa-star"></i>
              <i class="fa fa-star"></i>
              <i class="fa fa-star"></i>
              <i class="fa fa-star"></i>
              <i class="fa fa-star"></i>
          </div>
          <p>$<%= Number(prod.price).toFixed(2) %></p>
        </div>
      <% }); %>
    </div>
  </div>
  <p id="product-data-text" class="hidden"><%= JSON.stringify(product) %></p>

  <!--Footer-->
  <%- include('../template/footer.ejs'); %>
  <script src="/public/js/addToCart.js"></script>
</body>
</html>